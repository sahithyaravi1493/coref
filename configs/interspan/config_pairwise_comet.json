{
  "bert_tokenizer": "roberta-large",
  "bert_model": "roberta-large",
  "bert_hidden_size": 1024,
  "hidden_layer": 1024,
  "dropout": 0.3,
  "with_mention_width": true,
  "with_head_attention": true,
  "embedding_dimension": 20,

  "max_mention_span": 10,
  "use_gold_mentions": true,
  "mention_type": "events",
  "top_k": 0.25,
  "training_method": "pipeline",
  "subtopic": true,
  "use_predicted_topics": false,
  "segment": true,

  "random_seed": 120,
  "epochs": 10,
  "batch_size": 512,
  "learning_rate": 1e-4,
  "weight_decay": 0,
  "pos_class_weight":1,
  "loss": "bce",
  "optimizer": "adam",
  "adam_epsilon": 1e-8,
  "segment_window": 512,
  "neg_samp": true,
  "exact": false,

  "include_graph": false,
  "knowledge_embedding_dimension": 200,
  "relations_per_sentence": 2,
  "embedding_type": "rgcn",
  "stored_embeddings_path": "comet/rgcn_hidden",

  "exclude_span_repr": false,
  
  "include_text": true,
  "mode": "comet",
  "fusion": "interspan",
  "inferences_path": "",
  "text_embeddings_path": "comet/comet_ind",
  "reduce_attention_output":false,
  "n_inferences":10,
  "expansion_dimension":3092,
  "plot_cosine": false,

  "log_path": "logs/comet_interspan_120/",
  "data_folder": "data/ecb/mentions",
  "span_repr_path": "models/span_scorers/events_span_repr_0",
  "span_scorer_path": "models/span_scorers/events_span_scorer_0",
  "model_path": "models/comet_interspan_120/"
}