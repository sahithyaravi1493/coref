{
  "gpu_num" : [3],
  "bert_tokenizer": "roberta-large",
  "bert_model": "roberta-large",
  "bert_hidden_size": 1024,
  "hidden_layer": 1024,
  "dropout": 0.1,
  "with_mention_width": true,
  "with_head_attention": true,
  "embedding_dimension": 20,

  "max_mention_span": 10,
  "use_gold_mentions": false,
  "mention_type": "events",
  "top_k": 0.25,
  "training_method": "pipeline",
  "subtopic": true,
  "use_predicted_topics": false,
  "segment": true,

  "random_seed": 50,
  "epochs": 1,
  "batch_size": 64,
  "learning_rate": 1e-4,
  "weight_decay": 1e-2,
  "loss": "bce",
  "optimizer": "adamw",
  "adam_epsilon": 1e-8,
  "segment_window": 512,
  "neg_samp": true,
  "exact": false,

  "include_graph": false,
  "knowledge_embedding_dimension": 200,
  "relations_per_sentence": 50,
  "exclude_span_repr": false,
  "embedding_type": "rgcn",
  "stored_embeddings_path": "comet/rgcn_hidden",
  "plot_cosine": true,
  
  "include_text": false,
  "topk":5,
  "expansion_dimension":2048,
  "attention_based": false,

  "log_path": "logs/pairwise_scorer_n/",
  "data_folder": "data/ecb/mentions",
  "span_repr_path": "models/span_scorers/events_span_repr_0",
  "span_scorer_path": "models/span_scorers/events_span_scorer_0",
  "model_path": "models/pairwise_scorers_s"
}